const mongoose = require('mongoose');

const UserSelectedPackageSchema = new mongoose.Schema({
  userId: {
    type: String,
    default: "1", //this will need to be changed once authentication is setup
    required: false
  },
  item: {
    type: Object,
    required: true
  },
  category: {
    type: String,
    required: true,
    enum: ['movie', 'book', 'music', 'show', 'game', 'new', 'activity']
  },
  selectedDate: {
    type: Date,
    default: Date.now
  }
}, {
  timestamps: true
});

module.exports = mongoose.model('UserSelectedPackage', UserSelectedPackageSchema);